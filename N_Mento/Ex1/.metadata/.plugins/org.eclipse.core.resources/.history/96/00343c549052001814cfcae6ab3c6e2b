public class EE{
	public static void main(String[] args){
		double f=0; //  화씨온도를 구할 f
		//double 인 이유는 9.0/5.0이 1.8로 소수점 계산이 들어가기 때문
		
		for(int c = -60 ; c<= 140 ; c+=20) { // 섭씨온도 c 는 -60 부터 시작해서 140까지 20씩 증가, 
			f= (9.0/5.0)*c+32; // 섭씨온도를 화씨온도로 구하는 공식
			// 화씨온도  = (9.0/5.0)* 섭씨온도 + 32
			System.out.println("c : "+c+" >>> F : "+ (int) f);
			// (int) f인 이뉴는 double로 저장된 변수 f를 온도는 모두 정수 형태로 출력하라고해서
			// 명시적 형변환을 사용하여 정수형(int)로 변환
			// 출력문 예시 : c : 섭씨온도 >>> F : 화씨온도
		}
	}
}
